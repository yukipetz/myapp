<div id="like_btn_<%= movie %>">
  <% if Like.find_by(user_id: current_user.id, video_id: movie) %>
    <p>Already in your playlist.</p>
  <% else %>
    <li><%= link_to "Like", likes_path(user_id: current_user.id, video_id: movie), method: :post, remote: true, data: {"turbolinks" => false} %></li>
  <% end %>
</div>
