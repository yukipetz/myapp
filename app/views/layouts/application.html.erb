<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <div class="wrapper">
      <%= render 'layouts/header' %>
      <div class="container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
        <%= debug(params) if Rails.env.development? %>
      </div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
