<% provide(:title, "Songs") %>

<h1>Check them out !!!</h1>

<div class="movie_index">
  <% @movies.each do |movie| %>
    <% movie = movie[:id][:video_id] %>
      <div class="movies-item">
        <ul>
          <li>
            <iframe width="300" height="200" src="https://www.youtube.com/embed/<%= movie %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </li>
          <div id="like_btn_<%= movie %>">
            <% if Like.find_by(user_id: current_user.id, video_id: movie) %>
              <p>Already in your playlist.</p>
            <% else %>
              <li><%= link_to "Like", likes_path(user_id: current_user.id, video_id: movie), method: :post %></li>
            <% end %>
          </div>
        </ul>
      </div>
  <% end %>
</div>
